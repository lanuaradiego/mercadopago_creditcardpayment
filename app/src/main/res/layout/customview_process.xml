<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/layAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_money"/>
        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="20sp"
            android:textColor="@color/colorMoney"
            tools:text="######.##"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginStart="2dp"
            android:text="@string/app_typecurrency"
            android:textColor="@color/colorMoney"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/imgPaymentMethod"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            tools:background="#000000"/>
        <TextView
            android:id="@+id/txtPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="20sp"
            tools:text="[METHOD]"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layIssuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/imgIssuer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            tools:background="#000000"/>
        <TextView
            android:id="@+id/txtIssuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="20sp"
            tools:text="[BANK]"/>
    </LinearLayout>
</GridLayout>